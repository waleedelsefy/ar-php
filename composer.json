{
    "name": "waleedelsefy/ar-php",
    "description": "Modern modular Arabic text processing library for PHP 8.4+",
    "type": "library",
    "license": "MIT",
    "keywords": ["arabic", "nlp", "text-processing", "modular", "php84", "hijri", "islamic"],
    "authors": [
        {
            "name": "Waleed Elsefy",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/waleedelsefy/ar-php",
    "support": {
        "issues": "https://github.com/waleedelsefy/ar-php/issues",
        "source": "https://github.com/waleedelsefy/ar-php"
    },
    "require": {
        "php": ">=8.4",
        "ext-mbstring": "*",
        "ext-json": "*",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "ArPHP\\Core\\": "packages/core/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArPHP\\Core\\Tests\\": "packages/core/tests/",
            "ArPHP\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse packages/core/src --level=8"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

